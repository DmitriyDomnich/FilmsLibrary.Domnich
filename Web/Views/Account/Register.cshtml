@model Web.ViewModels.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>Регистрация </h2>

<form asp-action="Register" asp-controller="Account">
    <div>
        <div>
            <label asp-for="Email">Введите Email </label>
            <input type="text" asp-for="Email"/>
        </div>
        <div>
            <label asp-for="Password">Введите пароль </label>
            <input type="password" asp-for="Password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Повторите пароль </label>
            <input type="password" asp-for="ConfirmPassword"/>
        </div>
        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>

