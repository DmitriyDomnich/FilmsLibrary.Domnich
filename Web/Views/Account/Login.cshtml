@model Web.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/LoginView.cshtml";
}
    <div class="container">
        <div class="row">
            <div class="mx-auto mt-4">
                <h2>Вход на сайт</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="mt-5">
                <form asp-action="Login" asp-controller="Account">
                    <div>
                        <div class="form-group col-4">
                            <label asp-for="Email" style="margin-left: 70px">Email</label>
                            </br>
                            <input type="text" asp-for="Email" />

                        </div>
                        <span asp-validation-for="Email"></span>
                        <div class="form-group col-4">
                            <label asp-for="Password" style="margin-left: 65px">Пароль</label>
                            </br>
                            <input type="password" asp-for="Password" />

                        </div>
                        <span asp-validation-for="Password"></span>
                        <div class="form-group">
                            <input type="submit" value="Войти" class="btn btn-outline-dark" style="margin-left: 70px" />
                        </div>

                    </div>
                </form>
                <div class="validation" asp-validation-summary="ModelOnly" style="margin-right: 30px"></div>
            </div>
        </div>
        <footer class="bg-dark container" style="position: fixed; bottom: 0">
            <div class="container-fluid text-center text-md-left">
                <div class="bg-dark text-center py-3" style="color:white">
                    © 2020 Copyright:
                    <a asp-action="Index" asp-controller="Home">Filmoteka.com</a>
                </div>
            </div>
        </footer>
    </div>

