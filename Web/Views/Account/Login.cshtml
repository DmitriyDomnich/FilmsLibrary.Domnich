@model Web.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/LoginView.cshtml";
}
    <div class="container">
        <h2 class="text-center mt-3">Вход на сайт </h2>
        <div class="mt-5 col-12 d-flex mx-auto justify-content-center">
            <form asp-action="Login" asp-controller="Account" class="col-4">
                    <div class="form-group">
                        <label asp-for="Email" style="margin-left:100px">Введите Email </label>
                        <input type="text" asp-for="Email" class="form-control input-validation-error" />
                        <span asp-validation-for="Email" class="field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" style="margin-left:100px">Введите пароль </label>
                        <input type="password" asp-for="Password" class="form-control input-validation-error" />
                        <span asp-validation-for="Password" class="field-validation-error"></span>
                    </div>
                    <div class="mt-2" style="margin-left:130px">
                        <input type="submit" value="Войти" class="btn btn-outline-dark" />
                    </div>
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
            </form>
        </div>
        <footer class="bg-dark container" style="position: fixed; bottom: 0">
            <div class="container-fluid text-center text-md-left">
                <div class="bg-dark text-center py-3" style="color:white">
                    © 2020 Copyright:
                    <a asp-action="Index" asp-controller="Home">Filmoteka.com</a>
                </div>
            </div>
        </footer>
    </div>

